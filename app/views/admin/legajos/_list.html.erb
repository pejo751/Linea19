<%= list_builder_for @records do |list|
      list.legajo
      list.nombre
      list.telefonos
      list.inicio.to_s(:my_date)
      list.html :caption => 'Direcciones' do |d|
         link_to 'Editar', admin_legajo_direccion_de_legajos_path(d)
      end
      list.html :caption => 'Documentos' do |d|
         link_to 'Editar', admin_legajo_documento_de_legajos_path(d)
      end
      list.html :caption => 'Familiares' do |f|
         link_to 'Editar', admin_legajo_familiar_de_legajos_path(f)
      end
    end %>
