
<%=
   if @resource.foto_de_legajos.first
      image_tag @resource.foto_de_legajos.first.foto.url, :height => 300
   else
      image_tag '/images/legajo.gif', :height => 300
   end
%>

<%=
  present :elegant do |p|
    p.header do |r|
      r.field 'Legajo', @resource.legajo
    end
    p.body do |r|
      r.field 'Nombre', @resource.nombre
      r.field 'Tipo documento', @resource.tipo_documento
      r.field 'Documento', @resource.documento
      r.field 'C.U.I.F.', @resource.c_u_i_f
      r.field 'Telefonos', @resource.telefonos
      r.field 'Inicio', @resource.inicio
      r.field 'Nacimiento', @resource.nacimiento
      r.field 'Estado civil', @resource.estado_civil
      r.field 'Nivel estudio', @resource.nivel_estudio
      r.field 'Categoria', @resource.categoria
      r.field 'Observaciones', @resource.observaciones
      r.field 'Id', @resource.id
      r.field 'Created at', @resource.created_at
      r.field 'Updated at', @resource.updated_at
    end
    p.actions do |r|
      r.text link_to('Direcciones', admin_legajo_direccion_de_legajos_path(@resource))
      r.text link_to('Documentos', admin_legajo_documento_de_legajos_path(@resource))
      r.text link_to('Familiares', admin_legajo_familiar_de_legajos_path(@resource))
      r.text link_to('Fotos', admin_legajo_foto_de_legajos_path(@resource))
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
