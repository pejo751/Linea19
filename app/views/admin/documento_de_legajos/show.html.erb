 
<%=
  present :elegant do |p|
    p.header do |r|
      r.field 'Legajo', @resource.datos_de_legajo
      r.field 'Tipo documento', @resource.tipo_documento
    end
    p.body do |r|
      r.field 'Descripcion', @resource.descripcion
      r.field 'Vencimiento', @resource.vencimiento
      r.field 'Usuario verificador', @resource.usuario_verificador
      r.field 'Url imagen', @resource.url_imagen
      r.field 'Created at', @resource.created_at
      r.field 'Updated at', @resource.updated_at
    end
    p.actions do |r|
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
