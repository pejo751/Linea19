 
<%=
  present :elegant do |p|
    p.header do |r|
      r.field 'Legajo', @resource.datos_de_legajo
      r.field 'Tipo direccion', @resource.tipo_direccion
    end
    p.body do |r|
      r.field 'Direccion', @resource.direccion
      r.field 'Barrio', @resource.barrio
      r.field 'Ciudad', @resource.ciudad
      r.field 'Provincia', @resource.provincia
      r.field 'Created at', @resource.created_at
      r.field 'Updated at', @resource.updated_at
    end
    p.actions do |r|
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
