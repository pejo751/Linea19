 
<%=
  present :elegant do |p|
    p.header do |r|
      r.field 'Fecha', @resource.fecha
      r.field 'Legajo', @resource.datos_de_legajo
    end

    p.body do |r|
      r.field 'Tipo', @resource.tipo
      r.field 'Detalle', @resource.detalle
      r.field 'Fecha descargo', @resource.fecha_descargo
      r.field 'Descargo', @resource.descargo
      r.field 'Created at', @resource.created_at
      r.field 'Updated at', @resource.updated_at
    end

    p.actions do |r|
#      r.text link_to('manage some nested resource', path_to_some_resource_path(@resource))
      r.text edit_action
      r.text destroy_action
      r.text back_action
    end
  end
%>
